{
	"manifest_version": 2,

	"name": "Web Scheduler",

	"description": "To-do list & block site",
	
	"background": 
	{ 
		"page": "main.html",
		"persistent": true
	},

	"version": "1.0",
	
	"chrome_url_overrides" : 
	{
    	"newtab": "main.html"
	},

	"browser_action": 
	{
		"popup": "main.html",
		"default_icon": "images/48.png"
	},

	"icons": 
	{ 
		"16": "images/16.png",
		"48": "images/48.png",
		"72": "images/72.png",
		"128": "images/128.png" 	
	},

	"permissions": 
	[
		"tabs",
		"alarms",
		"background",
		"storage",
		"notifications",
		"webRequest", "webRequestBlocking",
    	"http://*/*", "https://*/*"
	]

}
